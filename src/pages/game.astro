---
import Layout from "../layouts/Layout.astro";
import Tile from "../components/Tile.astro";
import IconGear from "src/components/icons/IconGear.astro";
const tiles = [
  "tile-0",
  "tile-1",
  "tile-2",
  "tile-3",
  "tile-4",
  "tile-5",
  "tile-6",
  "tile-7",
  "tile-8",
];
---

<Layout title="Tic Tac Toe">
  <main>
    <div class="d-flex">
      <div class="score-board row no-gutters">
        <div class="score-section col order-1">
          <h2>Player</h2>
          <div class="score player-score">52</div>
        </div>
        <div class="middle-section col-12 col-md order-4 order-md-2">
          <button class="settings-button"><IconGear /></button>
        </div>
        <div class="score-section col order-3">
          <h2>Computer</h2>
          <div class="score computer-score">2</div>
        </div>
      </div>
      
    </div>
    

    <div class="py-4">
      <div class="game-board">
        {tiles.map((item) => <Tile identifier={item} />)}
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100%;
    padding-top: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 500px;

    @media only screen and (max-width: 768px) {
      padding-top: 0;
    }
  }


  .game-board {
    width: auto;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    column-gap: 10px;
    row-gap: 10px;
  }

  h1 {
    text-align: center;
    font-size: 3rem;
    margin-right: 2rem;
  }
</style>
